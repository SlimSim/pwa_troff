{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2020"],
    "allowUmdGlobalAccess": true
  },
  "include": ["**/*.js", "*.js", "**/*.d.ts"],
  "exclude": ["assets/external/**", "node_modules", "dist", "build"]
}
